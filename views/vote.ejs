<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/vote.css'/>
</head>
<body>

<% include _header %>

<div class="main">
    <div class="container">
        <div class="row">
            <h1><%= displayTitle %></h1>

            <form method="post" class="vote-form">
                <div class="teams">
                    <% voteTeams.forEach(function (team) { %>
                    <div class="team panel panel-default">
                        <div class="panel-heading">
                            <h2 class="team-name"><%= team.name %></h2>
                            <p class="team-application-name"><%= team.applicationName %></p>
                            <p class="team-members">
                                <% team.users.forEach(function (user) { %>
                                <span class="label label-info"><%= user.username %></span>
                                <% }); %>
                            </p>
                        </div>

                        <ul class="list-group">
                            <% voteItems.forEach(function (item) { %>
                            <li class="list-group-item">
                                <h3 class="item-name"><%= item.name %></h3>
                                <pre class="item-description help-block"><%= item.description %></pre>

                                <label class="radio-inline">
                                    <input type="radio" name="vote[<%= team._id %>][<%= item._id %>]" value="1"> 低い (1pt)
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" name="vote[<%= team._id %>][<%= item._id %>]" value="2"> やや低い (2pt)
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" name="vote[<%= team._id %>][<%= item._id %>]" value="3"> やや高い (3pt)
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" name="vote[<%= team._id %>][<%= item._id %>]" value="4"> 高い (4pt)
                                </label>
                            </li>
                            <% }); %>
                        </ul>
                    </div>
                    <% }); %>
                </div>

                <button type="submit" class="btn btn-success">投票する</button>
            </form>
        </div>
    </div>
</div>

<!-- include javascripts -->
<script src="/vendor/jquery/dist/jquery.min.js"></script>
<script src="/vendor/bootstrap/dist/js/bootstrap.min.js"></script>

</body>
</html>
